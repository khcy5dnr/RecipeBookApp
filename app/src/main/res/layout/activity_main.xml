<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.durai23.recipebook.MainActivity">


    <Button
        android:id="@+id/addRecipe_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="181dp"
        android:text="ADD NEW RECIPE"
        android:textColor="#ffffff"
        android:background="@drawable/round_button"/>

    <Button
        android:id="@+id/searchRecipe_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/addRecipe_button"
        android:layout_alignStart="@+id/addRecipe_button"
        android:layout_below="@+id/addRecipe_button"
        android:layout_marginTop="64dp"
        android:text="SEARCH RECIPE"
        android:textColor="#ffffff"
        android:background="@drawable/round_button"/>


</RelativeLayout>
